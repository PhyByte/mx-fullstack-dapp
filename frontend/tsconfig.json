/**
 * Main TypeScript Configuration File (tsconfig.json)
 *
 * This configuration file targets the TypeScript settings for the main
 * project, covering options like module resolution, JSX, and strict typing.
 *
 * For more information on TypeScript configuration options, visit:
 * https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
 */
 {
  "compilerOptions": {
    // Set the target ECMAScript version for output code
    "target": "ESNext",

    // Enable ECMAScript class fields
    "useDefineForClassFields": true,

    // Specify library files to be included in the compilation
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    // Disallow JavaScript files to be compiled
    "allowJs": false,

    // Skip type checking of declaration files
    "skipLibCheck": true,

    // Disable emitting helpers for interop between CommonJS and ES Modules
    "esModuleInterop": false,

    // Allow default imports from modules with no default export
    "allowSyntheticDefaultImports": true,

    // Enable strict typing and catch potential issues during development
    "strict": true,

    // Disallow inconsistently-cased references to the same file
    "forceConsistentCasingInFileNames": true,

    // Set the module code generation to the latest ECMAScript version
    "module": "ESNext",

    // Use Node.js-style module resolution
    "moduleResolution": "Node",

    // Enable importing JSON modules
    "resolveJsonModule": true,

    // Ensure that every file can be safely transpiled without errors
    "isolatedModules": true,

    // Disable emitting output files
    "noEmit": true,

    // Set the JSX factory for React
    "jsx": "react-jsx",

    // Set the base URL for module resolution
    "baseUrl": "./",

    // Configure custom path aliases
    "paths": {
      "@/*": ["src/*"]
    },

    // Specify the location of custom type definitions
    "typeRoots": ["src/types/*"]
  },
  // Include files and folders in the TypeScript compilation
  "include": ["src", "*.ts"],

  // Add references to other TypeScript configuration files
  "references": [{ "path": "./tsconfig.node.json" }]
}
